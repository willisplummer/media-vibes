# Media Management Application Environment Variables
# Copy this file to .env and fill in your actual values

# =============================================================================
# TMDB (The Movie Database) API Configuration
# =============================================================================
# Required: API key for The Movie Database (TMDB) service
# Get your free API key from: https://www.themoviedb.org/settings/api
# This is used to fetch movie metadata, posters, ratings, and other details
TMDB_API_KEY=your_tmdb_api_key_here

# =============================================================================
# Server Configuration (Optional - defaults are used if not set)
# =============================================================================
# Port for the HTTP server (default: 8080)
# PORT=8080

# Host for the HTTP server (default: localhost/all interfaces)
# HOST=0.0.0.0

# =============================================================================
# Database Configuration (Optional - defaults are used if not set)
# =============================================================================
# SQLite database file path (default: media.db in current directory)
# DB_PATH=media.db

# =============================================================================
# Application Configuration (Optional)
# =============================================================================
# Log level (default: info)
# Options: debug, info, warn, error
# LOG_LEVEL=info

# Environment (default: development)
# Options: development, production, test
# APP_ENV=development

# =============================================================================
# Security Configuration (Optional but recommended for production)
# =============================================================================
# Secret key for session management (generate a random string for production)
# SESSION_SECRET=your-secret-key-here

# CORS allowed origins (comma-separated, default: *)
# CORS_ORIGINS=http://localhost:3000,https://yourdomain.com

# =============================================================================
# External Service Configuration (Optional - for future features)
# =============================================================================
# Download service configuration (if implementing torrent/download features)
# DOWNLOAD_DIR=/path/to/downloads
# TORRENT_CLIENT_URL=http://localhost:9091/transmission/rpc

# Notification service (if implementing notifications)
# NOTIFICATION_WEBHOOK_URL=https://hooks.slack.com/services/...
# EMAIL_SMTP_HOST=smtp.gmail.com
# EMAIL_SMTP_PORT=587
# EMAIL_USERNAME=your-email@gmail.com
# EMAIL_PASSWORD=your-app-password

# =============================================================================
# Development/Testing Configuration
# =============================================================================
# Enable debug mode (default: false)
# DEBUG=true

# Enable request logging (default: false)
# LOG_REQUESTS=true